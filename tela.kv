Gerenciador:

    Screen:
        name: 'menu'

        Label:
            text:'Forca'
            pos: 0, root.height/2 - self.font_size

        BoxLayout:
            orientation: 'vertical'
            size_hint_y: 0.45
            padding: 10
            spacing: '10dp'

            Button:
                text: "normal"
                on_press: root.celetor('n')
                on_release: app.root.current = 'game'

            Button:
                text: "dificil"
                on_press: root.celetor('d')
                on_release: app.root.current = 'game'


    Game:
        name: 'game'  

    Tela_Finalizacao:
        name: 'tela_final' 

<Tela_Finalizacao>:
    
    BoxLayout:
        size_hint_y: .50
        orientation:'vertical'
        padding: 5,
        Label:
            text:'VocÃª quer'
            pos: self.font_size/2 * (len(self.text)/2) - self.width//2,root.height/2  -  self.font_size 
        Button:
            text:'Continuar'
        Button:
            text: "Voltar para o menu"
            
